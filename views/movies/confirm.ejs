<% layout("/layouts/boilerplate") %>
<body>
    '<div class="row mt-3">
        <div class="col-8 offset-3">
            <h1>Booking Confirmed</h1>
            <p>Booking ID : <%= currUser._id %></p>
            <h3><%= movie.title %></h3>
        </div>
            <div class="card col-6 offset-3 show-card movie-card">
                <img src="<%= movie.image.url %>" class="card-img-top show-img" alt="movie_poster">
                <div class="card-body">
                    <p class="card-text">Shown in <i><%= movie.location %></i></p>
                    <p class="card-text"><%= movie.description %></p>
                    <p class="card-text">You paid : &#8377; <%= movie.price.toLocaleString("en-IN") %></p>
                </div>
            </div>
    </div>
</body>